{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build: project (g++)",
            "type": "shell",
            "command": "/usr/sbin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "-O0",
                "-Wall",
                "-Wextra",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/decision_tree.cpp",
                "-o",
                "${workspaceFolder}/app"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "build: active file (g++)",
            "command": "/usr/sbin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "none",
            "detail": "Build only the currently open file (may fail to link multi-file projects)."
        }
    ]
}